      margin-bottom: 20px;
    }
    .category-buttons button {
      background: #2196f3;
      color: white;
      border: none;
      padding: 10px 15px;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      /* ensures each button is side by side, but wraps on narrow screens */
      flex: 1 1 auto;
      min-width: 100px;
    }
    .category-buttons button:hover {
      background: #0b87e2;
    }
    .question-container {
      margin-bottom: 20px;
